<div class="wrap">
  <div id="passwordreset">
  <!-- correct shared/errors -->
  <div class="top">
    <h1>Set Up Your Account</h1>
    <p>Almost there!</p>
  </div>
  <%= form_for @user, :url => invite_path(params[:id]) do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <ul>
          <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="field4">
      <%= f.label :login, "Username" %>
      <%= f.text_field :login %>
  </div>
  <br>
  <div class="field4">
      <%= f.label :password %>
      <%= f.password_field :password %>
  </div>
  <br>
  <div class="field4">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
  </div>
  <br><br>
  <div class="field4"><%= f.submit "Submit", class: "button3" %></div>
  <br><br>
  <% end %>
  <div class="bottom">
    <%= image_tag("Anthologowhite.png", :size => "100x100", :id => "anthologo2") %>
  </div>
  </div>
</div>
    
